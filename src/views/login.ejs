<%- include("partials/head") %> 
 <section class="w-100 h-100 mt-5 ">
    <div class="container d-flex flex-column align-items-center">
        <h1 class="text-center mb-5">Login</h1>
        <% if(error){ %>
          <div class="alert alert-danger w-75 alert-dismissible fade show" role="alert">
               <%= error %> 
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>    
      <% } %>  
        <form action="/login" class="w-75" method="POST">
            <div class="form-floating mb-3">
                <input type="text" name="login" class="form-control" id="floatingInput" placeholder="login...">
                <label for="floatingInput">Login: </label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password: </label>
              </div>
              <button type="submit" class="btn btn-lg btn-primary w-100">Login</button>
        </form>
    </div>
 </section>
<%- include("partials/footer") %> 