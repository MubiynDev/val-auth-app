<%- include("partials/head") %> 
 <section class="w-100 hv-100 mt-5 d-flex flex-column align-content-center justify-content-center">
    <div class="container d-flex flex-column align-items-center justify-content-center">
        <h1 class="text-center mb-5">Sign Up</h1>
        <% if(error){ %>
            <div class="alert alert-danger w-75 alert-dismissible fade show" role="alert">
                 <%= error %> 
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>    
        <% } %>  
        <form action="/signup" class="w-75" method="POST">
            <div class="form-floating mb-3 w-100">
                <input type="text" name="login" class="form-control w-100" id="floatingInput" placeholder="login...">
                <label for="floatingInput">Login: </label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password: </label>
              </div>
              <div class="form-floating mb-3">
                <input type="text" name="fullName" class="form-control" id="floatingInput" placeholder="Full Name">
                <label for="floatingInput">Fullname: </label>
              </div>
              <button type="submit" class="btn btn-lg btn-primary w-100">Sign Up</button>
        </form>
    </div>
 </section>
<%- include("partials/footer") %> 